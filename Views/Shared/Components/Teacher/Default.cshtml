@{
    List<Teacher> teachers = Model;
}

<div class="teacher-area pt-150 pb-105">
    <div class="container">
        <div class="row">
            @foreach (var teacher in teachers.OrderByDescending(x => x.Id))
            {
                <div class="col-md-3 col-sm-4 col-xs-12">
                    <div class="single-teacher mb-45">
                        <div class="single-teacher-img">
                            <a asp-controller="Teachers" asp-action="Details" asp-route-id="@teacher.Id">
                                <img src="~/assets/img/teacher/@teacher.ImageUrl" alt="blog-details">
                            </a>
                        </div>
                        <div class="single-teacher-content text-center">
                            <h2><a href="teacher-details.html">@teacher.TeacherFullName"</a></h2>
                            <h4>@teacher.Position</h4>
                            <ul>
                                <li><a href="https://www.facebook.com/devitems/?ref=bookmarks"><i class="zmdi zmdi-facebook"></i></a></li>
                                <li><a href="https://www.pinterest.com/devitemsllc/"><i class="zmdi zmdi-pinterest"></i></a></li>
                                <li><a href="#"><i class="zmdi zmdi-vimeo"></i></a></li>
                                <li><a href="https://twitter.com/devitemsllc"><i class="zmdi zmdi-twitter"></i></a></li>
                            </ul>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</div>