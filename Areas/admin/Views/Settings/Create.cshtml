@model Setting
@{
    ViewData["Title"] = "Create";
}
<div class="row w-100">
    <div class="col-md-12 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title"> Create setting</h4>
                <form class="forms-sample" method="post" asp-action="Create" enctype="multipart/form-data">
                    <div class="form-group">
                        <label asp-for="Key">Key</label>
                        <input asp-for="Key" class="form-control" placeholder="Key" />
                        <span asp-validation-for="Key" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label>If you want to add a single value, check it, if you want a single image, don't check it</label>
                        <input type="checkbox" placeholder="Is Main" id="isMain">
                    </div>
                    <div class="form-group" id="imgInp">
                        <label asp-for="Photo">Image</label>
                        <input asp-for="Photo" class="form-control" placeholder="Image" accept="image/*">
                    </div>
                    <div class="form-group" id="valueInp">
                        <label asp-for="Value">Value</label>
                        <input asp-for="Value" class="form-control" placeholder="Value" />
                    </div>
                    <button type="submit" id="swelSetting" class="btn btn-primary mr-2">Submit</button>
                    <button class="btn btn-light" asp-action="Index">Cancel</button>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts
    {
    <script>
        $('#isMain').change(function () {
            if ($(this).is(":checked")) {
                $("#valueInp").removeClass("d-none");
                $("#imgInp").addClass("d-none");
            }
            else {
                $("#valueInp").addClass("d-none");
                $("#imgInp").removeClass("d-none");
            }
        });
    </script>
}

@section sweet{
    <script src="sweetalert2.all.min.js"></script>
    <script src="//cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <script>
        $('#swelSetting').click(function () {
            Swal.fire({
                position: 'top-end',
                icon: 'success',
                title: 'Yeni bir setting yüklənildi',
                showConfirmButton: false,
                timer: 2000
            })
        })
    </script>
}


