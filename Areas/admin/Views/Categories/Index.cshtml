@model List<Category>

<div class="row w-100">
    <div class="col-lg-12 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title">Events</h4>
                <a class="btn btn-success" asp-action="Create">Create Categories</a>
                <div class="table-responsive pt-3">
                    <table class="table table-dark">
                        <thead>
                            <tr>
                                <th>
                                    Total
                                </th>
                                <th>
                                    Category Name
                                </th>
                                <th>
                                    Quantity
                                </th>
                                <th>
                                    Actions
                                </th>
                            </tr>
                        </thead>
                        <tbody>
                            @{
                                int itemsCount = 0;
                            }
                            @foreach (var item in Model.OrderByDescending(x=>x.Id))
                            {
                                itemsCount++;
                                <tr>
                                    <td>
                                        @itemsCount
                                    </td>
                                    <td>
                                        @item.CategoryName
                                    </td>
                                    <td>
                                        @item.Quantity
                                    </td>
                                    <td>
                                        <a class="btn btn-primary" asp-action="details" asp-route-id="@item.Id">Details</a>
                                        <a class="btn btn-success" asp-action="update" asp-route-id="@item.Id">Update</a>
                                        <a class="btn btn-danger deleteBtnCate" asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>

@section alertby{
    <script src="sweetalert2.all.min.js"></script>
    <script src="sweetalert2.min.js"></script>
    <script src="//cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <script>

        $('.deleteBtnCate').click(function (e) {
            e.preventDefault();

            const deleteUrl = $(this).attr("href");

            Swal.fire({
                title: 'Are you sure?',
                text: "You won't be able to revert this!",
                icon: 'warning',
                showCancelButton: true,
                confirmButtonColor: '#3085d6',
                cancelButtonColor: '#d33',
                confirmButtonText: 'Yes, delete it!'
            }).then((result) => {
                if (result.isConfirmed) {
                    fetch(deleteUrl, { method: "POST" })
                        .then(response => response.text())
                        .then(data => {
                            Swal.fire(
                                'Deleted!',
                                'Your file has been deleted.',
                                'success'
                            )
                            setTimeout(() => {
                                window.location.reload();
                            }, 1500)
                        })
                }
            })
        })
    </script>
}
